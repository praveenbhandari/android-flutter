<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundsec"
    tools:context=".datalimit">

    <EditText
        android:id="@+id/limit"
        android:layout_width="346dp"
        android:layout_height="81dp"
        android:layout_marginStart="176dp"
        android:layout_marginEnd="177dp"
        android:background="@drawable/etstyle"
        android:hint="Enter Data Limit"
        android:textColorHint="#1D1C1C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.52" />

    <Button
        android:id="@+id/datalimit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="103dp"
        android:background="@drawable/etstyle"
        android:text="set data limit"
        android:textColor="#1B1B1A"
        android:textColorHighlight="#FFFCFC"
        android:textColorHint="#EE7C25"
        android:textColorLink="#00111010"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.752"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.754" />
</androidx.constraintlayout.widget.ConstraintLayout>