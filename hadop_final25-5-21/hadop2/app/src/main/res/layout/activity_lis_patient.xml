<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/sr_no_1"
                    android:textColor="#1064A6"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/aclonica"
                    android:gravity="center"
                    android:text="sr no."
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/dise_his"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="0dp"
                    android:layout_toLeftOf="@+id/date_1"
                    android:layout_toRightOf="@+id/sr_no_1"
                    android:fontFamily="@font/aclonica"
                    android:gravity="center"
                    android:text="Disease"
                    android:textColor="#1064A6"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/patient_symptoms_1"
                    android:layout_width="375dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/dise_his"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="-53dp"
                    android:layout_marginBottom="7dp"
                    android:layout_toLeftOf="@+id/date_1"
                    android:layout_toRightOf="@+id/sr_no_1"
                    android:fontFamily="@font/aclonica"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:text="symptoms"
                    android:textColor="#1064A6"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/date_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="23dp"
                    android:fontFamily="@font/aclonica"
                    android:text="date"
                    android:textColor="#1064A6" />

                <TextView
                    android:id="@+id/time_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/date_1"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="-1dp"
                    android:layout_marginRight="23dp"
                    android:fontFamily="@font/aclonica"
                    android:text="Time"
                    android:textColor="#1064A6" />


            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>